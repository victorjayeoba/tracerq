# Production Environment Configuration
ENVIRONMENT=production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8083
API_WORKERS=4

# CORS Configuration (Replace with your frontend domain)
ALLOWED_ORIGINS=["http://localhost:3000", "https://your-frontend-domain.com"]
ALLOWED_METHODS=["GET", "POST", "OPTIONS"]
ALLOWED_HEADERS=["*"]

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=["localhost", "your-domain.com", "your-server-ip"]

# File Upload Limits
MAX_FILE_SIZE_MB=100
MAX_REQUEST_SIZE_MB=100

# Model Configuration
MODEL_CACHE_DIR=/app/models
CHECKPOINT_DIR=/app/DeepSecure-AI/checkpoints

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/deepsecure.log

# Database (if you add one later)
# DATABASE_URL=postgresql://user:password@localhost:5432/deepsecure

# Redis (for caching, if added)
# REDIS_URL=redis://localhost:6379/0

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
